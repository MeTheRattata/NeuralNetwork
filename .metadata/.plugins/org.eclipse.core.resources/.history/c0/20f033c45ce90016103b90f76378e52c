				trainingOutput = new Scanner(trainingOut);
			}
			network.learn(trainingInput.next().toLowerCase(), trainingOutput.nextDouble());
			if(network.getStreak() == 5)
				isSmart = true;
		}
		trainingInput.close();
		trainingOutput.close();
		
